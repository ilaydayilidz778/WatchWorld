@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="card mb-3">
    <div class="card-body">
        <form class="row align-items-center" asp-controller="Home" asp-action="Index" method="get">
            <div class="col-auto">
                <label>Category</label>
            </div>
            <div class="col-auto">
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                    <option value="">Choose</option>
                </select>
            </div>
            <div class="col-auto">
                <label>Brand</label>
            </div>
            <div class="col-auto">
                <select asp-for="BrandId" asp-items="Model.Brands" class="form-select">
                    <option value="">Choose</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    @foreach (var p in Model.CatologItems)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="product-container shadow p-3">
                <div class="product-image">
                    <img src="~/img/products/@p.PictureUri" alt="@p.Name" class="w-100" />
                </div>
                <div class="product-name my-2 h6" title="Product Name">
                    @p.Name
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    @p.Price.ToString("c2")
                    <a href="#" class="btn btn-sm btn-success">
                        <i class="fa-solid fa-cart-plus fa-lg"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Pagination">
    <ul class="pagination">
        @if (Model.PaginationInfo.HasPrevious)
        {
            <li class="page-item disabled">
                <span class="page-link">&laquo;</span>
            </li>
        }

        @for (int i = 1; i <= Model.PaginationInfo.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PaginationInfo.PageId ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageId="@i">@i</a>
            </li>
        }

        @if (Model.PaginationInfo.HasNext)
        {
            <li class="page-item disabled">
                <span class="page-link">&raquo;</span>
            </li>
        }
    </ul>
</nav>
